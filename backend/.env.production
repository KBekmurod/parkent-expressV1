# Server
PORT=5000
NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb://mongo:27017/parkent-express

# JWT
# ⚠️  CRITICAL: Change JWT_SECRET before deployment!
# This default value MUST be replaced with a strong, unique secret key
# Generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-production-key-min-32-chars-change-this
JWT_EXPIRE=30d

# CORS - comma-separated list of allowed origins (no spaces around commas)
# Example: CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# API URL
API_URL=https://api.yourdomain.com/api/v1

# Telegram Bot Tokens
# ⚠️  IMPORTANT: Replace these with your actual bot tokens from @BotFather
CUSTOMER_BOT_TOKEN=your_customer_bot_token_here
VENDOR_BOT_TOKEN=your_vendor_bot_token_here
DRIVER_BOT_TOKEN=your_driver_bot_token_here

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
