# Server
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/parkent-express

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Telegram Bots
CUSTOMER_BOT_TOKEN=your-customer-bot-token
DRIVER_BOT_TOKEN=your-driver-bot-token
VENDOR_BOT_TOKEN=your-vendor-bot-token

# Logging
LOG_LEVEL=info

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=*

# Card Payment Settings
CARD_PAYMENT_ENABLED=true
RECEIPT_UPLOAD_MAX_SIZE=5242880
